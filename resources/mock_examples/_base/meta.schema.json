{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "Generated by AI (based on BaseMetaYml & co.)",
  "type": "object",
  "required": ["$schema", "test"],
  "properties": {
    "$schema": "this is just here to make intellij happy about allowing the $schema property",
    "test": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["snapshot", "compiles"],
          "description": "The type of test to run"
        },
        "skip": {
          "type": "boolean",
          "description": "Whether to skip this test"
        }
      },
      "additionalProperties": false
    },
    "fixtures": {
      "type": "object",
      "required": ["base"],
      "properties": {
        "base": {
          "type": "string",
          "description": "Base fixture to use for the test"
        }
      },
      "additionalProperties": false
    },
    "snapshots": {
      "type": "object",
      "required": ["sources"],
      "properties": {
        "share": {
          "type": "boolean",
          "description": "Whether to share snapshots across languages"
        },
        "sources": {
          "type": "object",
          "properties": {
            "stdout": {
              "type": ["object", "null"],
              "properties": {
                "matches": {
                  "type": "string"
                }
              },
              "additionalProperties": true
            },
            "stderr": {
              "type": ["object", "null"],
              "properties": {
                "matches": {
                  "type": "string"
                }
              },
              "additionalProperties": true
            },
            "documents": {
              "type": ["object", "null"],
              "properties": {
                "filter": {
                  "type": "object"
                }
              },
              "additionalProperties": true
            },
            "rows": {
              "type": ["object", "null"],
              "properties": {
                "filter": {
                  "type": "object"
                }
              },
              "additionalProperties": true
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "test": {
            "properties": {
              "type": {
                "const": "snapshot"
              }
            }
          }
        }
      },
      "then": {
        "required": ["$schema", "test", "fixtures", "snapshots"]
      }
    },
    {
      "if": {
        "properties": {
          "test": {
            "properties": {
              "type": {
                "const": "compiles"
              }
            }
          }
        }
      },
      "then": {
        "required": ["$schema", "test"],
        "not": {
          "anyOf": [
            { "required": ["fixtures"] },
            { "required": ["snapshots"] }
          ]
        }
      }
    }
  ],
  "additionalProperties": false
}
