{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "clientLanguage": {
      "type": "string",
      "enum": ["JAVA", "PYTHON", "TYPESCRIPT", "CSHARP", "BASH"],
      "description": "Supported client languages"
    },
    "perLanguageToggle": {
      "oneOf": [
        {
          "type": "boolean",
          "description": "Apply the same boolean value to all languages"
        },
        {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "(?i)^(JAVA|PYTHON|TYPESCRIPT|CSHARP|BASH)$": {
              "type": "boolean"
            }
          },
          "description": "Per-language boolean configuration"
        }
      ]
    }
  },
  "type": "object",
  "required": ["$schema", "test"],
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "description": "JSON Schema reference"
    },
    "test": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["snapshot", "compiles"],
          "description": "The type of test to run"
        },
        "skipConfig": {
          "$ref": "#/$defs/perLanguageToggle",
          "description": "Whether to skip this test (boolean for all languages, or per-language object)"
        }
      },
      "additionalProperties": false
    },
    "fixtures": {
      "type": "object",
      "required": ["base"],
      "properties": {
        "base": {
          "type": "string",
          "description": "Base fixture to use for the test"
        }
      },
      "additionalProperties": false
    },
    "snapshots": {
      "type": "object",
      "required": ["sources"],
      "properties": {
        "share": {
          "$ref": "#/$defs/perLanguageToggle",
          "description": "Whether to share snapshots across languages (boolean for all languages, or per-language object)"
        },
        "sources": {
          "type": "object",
          "properties": {
            "stdout::capture": {
              "type": [
                "object",
                "null"
              ],
              "description": "Capture stdout output as-is"
            },
            "stderr::capture": {
              "type": [
                "object",
                "null"
              ],
              "description": "Capture stderr output as-is"
            },
            "stdout::matches": {
              "type": "object",
              "required": [
                "regex"
              ],
              "properties": {
                "regex": {
                  "type": "string",
                  "description": "Regular expression pattern to match against stdout"
                }
              },
              "additionalProperties": false,
              "description": "Match stdout output against a regex pattern"
            },
            "stderr::matches": {
              "type": "object",
              "required": [
                "regex"
              ],
              "properties": {
                "regex": {
                  "type": "string",
                  "description": "Regular expression pattern to match against stderr"
                }
              },
              "additionalProperties": false,
              "description": "Match stderr output against a regex pattern"
            },
            "stdout::jsonify": {
              "type": "object",
              "required": [
                "jq-bash"
              ],
              "properties": {
                "jq-bash": {
                  "type": "string",
                  "description": "Optional jq filter to apply to the bash output. Use . to use the full response."
                },
                "jq": {
                  "type": "string",
                  "description": "jq filter for bash to apply to the JSONified output. Stacks with jq-bash"
                }
              },
              "additionalProperties": false,
              "description": "Parse and format stdout output as JSON"
            },
            "stderr::jsonify": {
              "type": "object",
              "required": [
                "jq-bash"
              ],
              "properties": {
                "jq-bash": {
                  "type": "string",
                  "description": "Optional jq filter to apply to the bash output. Use . to use the full response."
                },
                "jq": {
                  "type": "string",
                  "description": "jq filter for bash to apply to the JSONified output. Stacks with jq-bash"
                }
              },
              "additionalProperties": false,
              "description": "Parse and format stderr output as JSON"
            },
            "collection::documents": {
              "type": [
                "object",
                "null"
              ],
              "properties": {
                "filter": {
                  "type": "object",
                  "description": "Data API filter to apply when capturing documents"
                },
                "projection": {
                  "type": "object",
                  "description": "Data API projection to apply when capturing documents"
                }
              },
              "additionalProperties": false,
              "description": "Capture documents from a collection"
            },
            "collection::definition": {
              "type": [
                "object",
                "null"
              ],
              "description": "Capture collection definition/schema"
            },
            "collection::names": {
              "type": [
                "object",
                "null"
              ],
              "description": "Capture collection names"
            },
            "table::rows": {
              "type": [
                "object",
                "null"
              ],
              "properties": {
                "filter": {
                  "type": "object",
                  "description": "Data API filter to apply when capturing rows"
                },
                "projection": {
                  "type": "object",
                  "description": "Data API projection to apply when capturing rows"
                }
              },
              "additionalProperties": false,
              "description": "Capture rows from a table"
            },
            "table::definition": {
              "type": [
                "object",
                "null"
              ],
              "description": "Capture table definition/schema"
            },
            "table::names": {
              "type": [
                "object",
                "null"
              ],
              "description": "Capture table names"
            },
            "udt::names": {
              "type": [
                "object",
                "null"
              ],
              "description": "Capture user-defined type names"
            },
            "udt::definitions": {
              "type": [
                "object",
                "null"
              ],
              "description": "Capture user-defined type definitions"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "test": {
            "properties": {
              "type": {
                "const": "snapshot"
              }
            }
          }
        }
      },
      "then": {
        "required": [
          "$schema",
          "test",
          "snapshots"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "test": {
            "properties": {
              "type": {
                "const": "compiles"
              }
            }
          }
        }
      },
      "then": {
        "required": [
          "$schema",
          "test"
        ],
        "not": {
          "anyOf": [
            {
              "required": [
                "fixtures"
              ]
            },
            {
              "required": [
                "snapshots"
              ]
            }
          ]
        }
      }
    }
  ],
  "additionalProperties": false
}
