// adapted from astra-db-ts's tsconfig
{
  "compilerOptions": {
    "target": "es2020",
    "module": "nodenext",
    "noEmitOnError": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "lib": ["es2020", "dom"],
  },
  "include": ["example.ts"],
}
